@prefix dash:   <http://datashapes.org/dash#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix ex:     <http://example.org/> .
@prefix sh:     <http://www.w3.org/ns/shacl#> .
@prefix shapes: <http://www.example.com/> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .


shapes:PersonShape
    a              sh:NodeShape ;
    sh:targetClass schema:Person ;
    sh:nodeKind    sh:IRI ;
    sh:and         ( [ sh:xone ( [ sh:path     schema:name ;
                                   sh:minCount 1 ; ]
                                 [ sh:path     schema:givenName ;
                                   sh:minCount 1 ; ] ) ]
                     [ sh:path     schema:birthDate ;
                       sh:lessThan schema:deathDate ;
                       sh:datatype xsd:date ;
                       sh:minCount 1 ; ]
                     [ sh:path     schema:gender ;
                       sh:in       ( "female" "male" ) ;
                       sh:minCount 1 ; ]
                     [ sh:path     schema:deathDate ;
                       sh:datatype xsd:date ;
                       sh:maxCount 1 ; ]
                     [ sh:path schema:address ;
                       sh:node schema:Address ; ] ) .

schema:Address
    a           sh:NodeShape, rdfs:Class ;
    sh:closed   true ;
    sh:nodeKind sh:BlankNode ;
    sh:property [ sh:path     schema:streetAddress ;
                  sh:datatype xsd:string ; ] ;
    sh:property [ sh:path         schema:postalCode ;
                  sh:or           ( [ sh:datatype xsd:string ] [ sh:datatype xsd:integer ] ) ;
                  sh:minInclusive 10000 ;
                  sh:maxInclusive 99999 ; ] .

shapes:EmployeeShape
    a              sh:NodeShape ;
    sh:targetClass ex:Employee ;
    sh:nodeKind    sh:IRI ;
    sh:and         ( [ sh:node shapes:PersonShape ]
                     [ sh:path     schema:startDate ;
                       sh:datatype xsd:date ;
                       sh:maxCount 1 ; ]
                     [ sh:path  schema:colleague ;
                       sh:class schema:Person ; ]
                     [ sh:path schema:worksFor ;
                       sh:or   ( [ sh:class schema:Person ]
                                 [ sh:class schema:Organization ] ) ; ]
                     [ sh:or ( [ sh:path     schema:contractor ;
                                 sh:class    schema:Organization ;
                                 sh:minCount 1 ; ]
                               [ sh:path     schema:department ;
                                 sh:class    schema:Organization ;
                                 sh:minCount 1 ; ] ) ] ) .
